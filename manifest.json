{
  "name": "Word Search",
  "version": "0.0.1",
  "description": "Find a word",
  "manifest_version": 2,
  "homepage_url": "https://github.com/josiahgallen/sample-chrome-extension",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
	  "css": ["content.css"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Word Search",
	"default_popup": "popup.html"
  },
  "permissions": [
	  "background",
	  "tabs",
	  "webNavigation",
	  "*://*/*"
  ],
  "icons": {
    "16": "small.png",
    "32": "small.png",
    "128": "small.png"
  }
}
